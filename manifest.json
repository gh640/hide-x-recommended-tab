{
  "manifest_version": 3,
  "name": "Hide X Recommended Tab",
  "version": "0.1.0",
  "description": "X のホームタイムラインから「おすすめ」タブを非表示にし、「フォロー中」を使いやすくします。",
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
